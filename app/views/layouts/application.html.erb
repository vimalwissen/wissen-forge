<!DOCTYPE html>
<html>
  <head>
    <title>WissenForge</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "tailwind", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
    <script src="https://unpkg.com/@heroicons/v2/24/outline/index.js"></script>
  </head>

  <body class="bg-gray-50 font-sans text-gray-900 min-h-screen flex flex-col">
    <!-- Sticky Navbar -->
    <nav class="bg-white/90 backdrop-blur-md border-b border-gray-100 fixed w-full z-50 transition-all duration-300">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between h-16">
          <div class="flex">
            <div class="flex-shrink-0 flex items-center gap-3">
              <%= image_tag "logo.png", class: "h-8 w-auto", alt: "WissenForge" %>
              <span class="text-xl font-bold bg-clip-text text-transparent bg-gradient-to-r from-blue-600 to-indigo-600">
                WissenForge
              </span>
            </div>
            <!-- Desktop Links -->
            <div class="hidden sm:ml-10 sm:flex sm:space-x-8">
              <%= link_to dashboard_path, class: "#{current_page?(dashboard_path) ? 'border-indigo-500 text-gray-900' : 'border-transparent text-gray-500 hover:border-gray-300 hover:text-gray-700'} inline-flex items-center px-1 pt-1 border-b-2 text-sm font-medium transition-colors duration-200" do %>
                 Dashboard
              <% end %>
              
              <%= link_to trainings_path, class: "#{current_page?(trainings_path) ? 'border-indigo-500 text-gray-900' : 'border-transparent text-gray-500 hover:border-gray-300 hover:text-gray-700'} inline-flex items-center px-1 pt-1 border-b-2 text-sm font-medium transition-colors duration-200" do %>
                 Training Catalog
              <% end %>

              <% if current_user&.role == 'employee' %>
                 <%= link_to profile_path, class: "#{current_page?(profile_path) ? 'border-indigo-500 text-gray-900' : 'border-transparent text-gray-500 hover:border-gray-300 hover:text-gray-700'} inline-flex items-center px-1 pt-1 border-b-2 text-sm font-medium transition-colors duration-200" do %>
                    My Profile
                 <% end %>
              <% end %>

              <% if current_user && (current_user.subordinates.any? || current_user.admin? || current_user.super_admin?) %>
                 <%= link_to reports_path, class: "#{current_page?(reports_path) ? 'border-indigo-500 text-gray-900' : 'border-transparent text-gray-500 hover:border-gray-300 hover:text-gray-700'} inline-flex items-center px-1 pt-1 border-b-2 text-sm font-medium transition-colors duration-200" do %>
                    Reports
                 <% end %>
              <% end %>
            </div>
          </div>
          
          <div class="flex items-center space-x-4">
            <% if user_signed_in? %>
              <div class="flex items-center text-sm">
                <div class="flex flex-col text-right mr-3 hidden md:block">
                  <span class="font-medium text-gray-900"><%= current_user.name %></span>
                  <span class="text-xs text-gray-500"><%= current_user.role.humanize %></span>
                </div>
                <%= button_to "Sign out", destroy_user_session_path, method: :delete, class: "text-gray-500 hover:text-red-600 transition-colors duration-200 font-medium text-sm" %>
              </div>
            <% else %>
              <%= link_to "Sign in", new_user_session_path, class: "text-gray-500 hover:text-gray-900 font-medium text-sm" %>
            <% end %>
          </div>
        </div>
      </div>
    </nav>

    <!-- Main Content with padding for fixed nav -->
    <main class="flex-grow pt-16">
      <% if notice %>
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 mt-4">
          <div class="bg-green-50 border-l-4 border-green-400 p-4 rounded-r-md shadow-sm" role="alert">
            <div class="flex">
              <div class="flex-shrink-0">
                <svg class="h-5 w-5 text-green-400" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                </svg>
              </div>
              <div class="ml-3">
                <p class="text-sm text-green-700"><%= notice %></p>
              </div>
            </div>
          </div>
        </div>
      <% end %>
      
      <% if alert %>
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 mt-4">
          <div class="bg-red-50 border-l-4 border-red-400 p-4 rounded-r-md shadow-sm" role="alert">
            <div class="flex">
              <div class="flex-shrink-0">
                <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
                </svg>
              </div>
              <div class="ml-3">
                <p class="text-sm text-red-700"><%= alert %></p>
              </div>
            </div>
          </div>
        </div>
      <% end %>

      <%= yield %>
    </main>

    <!-- Modern Footer -->
    <footer class="bg-white border-t border-gray-200 mt-auto">
      <div class="max-w-7xl mx-auto py-8 px-4 sm:px-6 lg:px-8">
        <div class="md:flex md:items-center md:justify-between">
          <div class="flex justify-center md:order-2 space-x-6">
            <a href="#" class="text-gray-400 hover:text-gray-500">About</a>
            <a href="#" class="text-gray-400 hover:text-gray-500">Support</a>
            <a href="#" class="text-gray-400 hover:text-gray-500">Privacy</a>
          </div>
          <div class="mt-8 md:mt-0 md:order-1">
            <p class="text-center text-base text-gray-400">
              &copy; <%= Time.current.year %> WissenForge. All rights reserved.
            </p>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>
