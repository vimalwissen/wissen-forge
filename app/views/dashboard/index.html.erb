<div class="bg-gray-50 min-h-screen">
  <!-- Hero Section -->
  <div class="relative bg-indigo-800 pb-32 overflow-hidden">
    <div class="absolute inset-0">
      <%= image_tag "hero_bg.png", class: "w-full h-full object-cover opacity-30", alt: "Learning Background" %>
      <div class="absolute inset-0 bg-gradient-to-r from-indigo-900/90 to-purple-800/80 mix-blend-multiply" aria-hidden="true"></div>
    </div>
    <div class="relative max-w-7xl mx-auto py-12 px-4 sm:py-20 sm:px-6 lg:px-8">
      <h1 class="text-4xl font-extrabold tracking-tight text-white md:text-5xl lg:text-6xl">
        Welcome Back, <%= current_user.name.split.first %>!
      </h1>
      <p class="mt-6 max-w-3xl text-xl text-indigo-100">
        You have <span class="font-bold text-white"><%= current_user.enrollments.where(status: :enrolled).count %></span> active courses and 
        <span class="font-bold text-white"><%= current_user.badges.count %></span> badges earned.
        Keep up the momentum!
      </p>
      <div class="mt-10 flex space-x-4">
        <%= link_to "Browse Catalog", trainings_path, class: "inline-flex items-center px-6 py-3 border border-transparent text-base font-medium rounded-md shadow-sm text-indigo-700 bg-white hover:bg-gray-50 focus:outline-none ring-2 ring-offset-2 ring-indigo-500" %>
        <%= link_to "My Profile", profile_path, class: "inline-flex items-center px-6 py-3 border border-transparent text-base font-medium rounded-md text-white bg-indigo-600/50 hover:bg-indigo-600/70 backdrop-blur-sm focus:outline-none" %>
      </div>
    </div>
  </div>

  <!-- Content Section overlaying Hero -->
  <div class="relative max-w-7xl mx-auto -mt-24 px-4 sm:px-6 lg:px-8 pb-12">
    
    <!-- Admin Stats Section -->
    <% if current_user.admin? || current_user.super_admin? %>
      <div class="mb-12">
        <h2 class="text-white text-lg font-semibold mb-4">Admin Overview</h2>
        <div class="grid grid-cols-1 gap-5 sm:grid-cols-2 lg:grid-cols-3">
          <div class="bg-white overflow-hidden shadow rounded-lg hover:shadow-lg transition-shadow duration-300">
            <div class="p-5">
              <div class="flex items-center">
                <div class="flex-shrink-0 bg-yellow-100 rounded-md p-3">
                  <svg class="h-6 w-6 text-yellow-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
                  </svg>
                </div>
                <div class="ml-5 w-0 flex-1">
                  <dl>
                    <dt class="text-sm font-medium text-gray-500 truncate">Pending Approvals</dt>
                    <dd>
                      <div class="text-lg font-medium text-gray-900"><%= @pending_approvals %></div>
                    </dd>
                  </dl>
                </div>
              </div>
            </div>
            <div class="bg-gray-50 px-5 py-3">
              <div class="text-sm">
                <a href="<%= trainings_path %>" class="font-medium text-indigo-600 hover:text-indigo-500">View all</a>
              </div>
            </div>
          </div>
          <!-- More stats can go here -->
        </div>
      </div>
    <% end %>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
      
      <!-- My Active Enrollments -->
      <div class="lg:col-span-2 space-y-6">
        <h2 class="text-2xl font-bold text-gray-900">My Active Learning</h2>
        <% if @my_enrollments.any? %>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <% @my_enrollments.each do |enrollment| %>
              <div class="bg-white rounded-xl shadow-sm border border-gray-100 overflow-hidden hover:shadow-md transition-shadow duration-300 flex flex-col">
                <div class="h-32 w-full bg-gradient-to-r from-blue-500 to-indigo-600 relative">
                  <!-- Placeholder pattern or image if we had partials for specific topics -->
                  <div class="absolute bottom-4 left-4">
                     <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-white/90 text-indigo-800 backdrop-blur-sm">
                        <%= enrollment.training.mode.humanize %>
                     </span>
                  </div>
                </div>
                <div class="p-6 flex-1 flex flex-col justify-between">
                  <div>
                    <h3 class="text-lg font-bold text-gray-900 mb-2 truncate" title="<%= enrollment.training.title %>">
                      <%= link_to enrollment.training.title, enrollment.training, class: "hover:text-indigo-600" %>
                    </h3>
                    <p class="text-sm text-gray-500 mb-4 line-clamp-2"><%= enrollment.training.description %></p>
                    
                    <div class="flex items-center text-sm text-gray-500 mb-4">
                      <svg class="flex-shrink-0 mr-1.5 h-5 w-5 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                      </svg>
                      <%= enrollment.training.start_time.strftime("%b %d, %I:%M %p") %>
                    </div>
                  </div>
                  
                  <%= link_to "Continue Learning", enrollment.training, class: "mt-4 w-full flex justify-center items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700" %>
                </div>
              </div>
            <% end %>
          </div>
        <% else %>
          <div class="bg-white rounded-lg shadow-sm p-8 text-center border-dashed border-2 border-gray-300">
            <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
            </svg>
            <h3 class="mt-2 text-sm font-medium text-gray-900">No active enrollments</h3>
            <p class="mt-1 text-sm text-gray-500">Get started by browsing the catalog.</p>
            <div class="mt-6">
              <%= link_to "Browse Trainings", trainings_path, class: "inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700" %>
            </div>
          </div>
        <% end %>
      </div>

      <!-- Sidebar: Upcoming & Recommended -->
      <div class="space-y-8">
        <div>
          <h2 class="text-xl font-bold text-gray-900 mb-4">Recommended for You</h2>
          <div class="bg-white shadow overflow-hidden sm:rounded-md">
            <ul role="list" class="divide-y divide-gray-200">
              <% @trainings.each do |training| %>
                <li>
                  <%= link_to training, class: "block hover:bg-gray-50" do %>
                    <div class="px-4 py-4 sm:px-6">
                      <div class="flex items-center justify-between">
                        <p class="text-sm font-medium text-indigo-600 truncate"><%= training.title %></p>
                        <div class="ml-2 flex-shrink-0 flex">
                           <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full <%= training.online? ? 'bg-green-100 text-green-800' : 'bg-blue-100 text-blue-800' %>">
                            <%= training.training_type.humanize %>
                          </span>
                        </div>
                      </div>
                      <div class="mt-2 text-sm text-gray-500">
                        <p><%= training.start_time.strftime("%b %d") %></p>
                      </div>
                    </div>
                  <% end %>
                </li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>

    </div>
  </div>
</div>
