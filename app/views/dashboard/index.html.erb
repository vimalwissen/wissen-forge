<div class="min-h-screen bg-gray-50">
  <!-- Full Width Hero Section -->
  <div class="relative bg-gradient-to-r from-indigo-600 via-purple-600 to-pink-500 overflow-hidden">
    <div class="absolute inset-0">
      <%= image_tag "hero_bg.png", class: "w-full h-full object-cover opacity-20", alt: "" rescue nil %>
    </div>
    <div class="absolute inset-0 bg-gradient-to-b from-transparent to-indigo-900/50"></div>
    
    <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16 lg:py-24">
      <div class="lg:grid lg:grid-cols-2 lg:gap-8 items-center">
        <div class="text-center lg:text-left">
          <h1 class="text-4xl md:text-5xl lg:text-6xl font-extrabold text-white tracking-tight">
            Welcome back,<br/>
            <span class="text-yellow-300"><%= current_user.name.split.first %>!</span>
          </h1>
          <p class="mt-6 text-xl text-indigo-100 max-w-xl">
            Continue your learning journey. You have 
            <span class="font-bold text-white"><%= current_user.enrollments.where(status: :enrolled).count %></span> 
            active courses waiting for you.
          </p>
          <div class="mt-10 flex flex-col sm:flex-row gap-4 justify-center lg:justify-start">
            <%= link_to trainings_path, class: "inline-flex items-center justify-center px-8 py-4 border border-transparent text-lg font-bold rounded-xl text-indigo-700 bg-white hover:bg-indigo-50 shadow-lg hover:shadow-xl transform hover:-translate-y-1 transition-all duration-200" do %>
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/>
              </svg>
              Browse Catalog
            <% end %>
            <%= link_to profile_path, class: "inline-flex items-center justify-center px-8 py-4 border-2 border-white/50 text-lg font-bold rounded-xl text-white hover:bg-white/10 backdrop-blur-sm transition-all duration-200" do %>
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
              </svg>
              My Profile
            <% end %>
          </div>
        </div>
        
        <!-- Stats Cards in Hero -->
        <div class="hidden lg:grid grid-cols-2 gap-6 mt-12 lg:mt-0">
          <div class="bg-white/10 backdrop-blur-lg rounded-2xl p-6 border border-white/20">
            <div class="text-4xl font-bold text-white"><%= current_user.enrollments.count %></div>
            <div class="text-indigo-200 mt-1">Total Enrollments</div>
          </div>
          <div class="bg-white/10 backdrop-blur-lg rounded-2xl p-6 border border-white/20">
            <div class="text-4xl font-bold text-green-300"><%= current_user.enrollments.completed.count %></div>
            <div class="text-indigo-200 mt-1">Completed</div>
          </div>
          <div class="bg-white/10 backdrop-blur-lg rounded-2xl p-6 border border-white/20">
            <div class="text-4xl font-bold text-yellow-300"><%= current_user.badges.count %></div>
            <div class="text-indigo-200 mt-1">Badges Earned</div>
          </div>
          <div class="bg-white/10 backdrop-blur-lg rounded-2xl p-6 border border-white/20">
            <div class="text-4xl font-bold text-pink-300"><%= @trainings.count %></div>
            <div class="text-indigo-200 mt-1">Available Courses</div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Super Admin Pending Approvals Alert (Only for Super Admin) -->
  <% if current_user.super_admin? && @pending_approvals > 0 %>
    <div class="bg-yellow-50 border-b border-yellow-100">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
        <div class="flex items-center justify-between">
          <div class="flex items-center space-x-4">
            <div class="bg-yellow-100 rounded-full p-3">
              <svg class="w-6 h-6 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
              </svg>
            </div>
            <div>
              <p class="text-yellow-800 font-semibold">Super Admin Action Required</p>
              <p class="text-yellow-600 text-sm">You have <span class="font-bold"><%= @pending_approvals %></span> mandatory training(s) pending your approval</p>
            </div>
          </div>
          <%= link_to "Review Now", trainings_path, class: "bg-yellow-500 hover:bg-yellow-600 text-white font-bold px-4 py-2 rounded-lg transition-colors duration-200" %>
        </div>
      </div>
    </div>
  <% end %>

  <!-- Mandatory Trainings Alert (For all users with pending mandatory trainings) -->
  <% if @mandatory_trainings.present? && @mandatory_trainings.any? %>
    <div class="bg-red-50 border-b border-red-100">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
        <div class="flex items-center justify-between flex-wrap gap-4">
          <div class="flex items-center space-x-4">
            <div class="bg-red-100 rounded-full p-3">
              <svg class="w-6 h-6 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
            </div>
            <div>
              <p class="text-red-800 font-semibold">‚ö†Ô∏è Mandatory Training Required</p>
              <p class="text-red-600 text-sm">You have <span class="font-bold"><%= @mandatory_trainings.count %></span> mandatory training(s) to complete</p>
            </div>
          </div>
          <div class="flex flex-wrap gap-2">
            <% @mandatory_trainings.limit(3).each do |enrollment| %>
              <%= link_to enrollment.training, class: "inline-flex items-center px-3 py-1.5 bg-red-600 hover:bg-red-700 text-white text-sm font-medium rounded-lg transition-colors duration-200" do %>
                <%= enrollment.training.title.truncate(20) %>
                <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                </svg>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <!-- Main Content -->
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
      
      <!-- My Active Enrollments -->
      <div class="lg:col-span-2">
        <div class="flex items-center justify-between mb-6">
          <h2 class="text-2xl font-bold text-gray-900">My Learning Journey</h2>
          <%= link_to "View All", trainings_path, class: "text-indigo-600 hover:text-indigo-500 font-medium" %>
        </div>
        
        <% if @my_enrollments.any? %>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <% @my_enrollments.each do |enrollment| %>
              <div class="bg-white rounded-2xl shadow-lg overflow-hidden hover:shadow-xl transition-all duration-300 transform hover:-translate-y-1 group">
                <div class="h-28 bg-gradient-to-r <%= enrollment.training.mandatory? ? 'from-red-500 to-pink-500' : 'from-blue-500 to-indigo-600' %> relative">
                  <div class="absolute bottom-4 left-4">
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-semibold bg-white/90 backdrop-blur-sm text-gray-800">
                      <%= enrollment.training.mode.humanize %>
                    </span>
                  </div>
                </div>
                <div class="p-5">
                  <h3 class="text-lg font-bold text-gray-900 group-hover:text-indigo-600 transition-colors duration-200 truncate">
                    <%= enrollment.training.title %>
                  </h3>
                  <p class="text-sm text-gray-500 mt-1 line-clamp-2"><%= enrollment.training.description %></p>
                  <div class="mt-4 flex items-center justify-between">
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-semibold 
                      <%= enrollment.status == 'completed' ? 'bg-green-100 text-green-800' : 'bg-blue-100 text-blue-800' %>">
                      <%= enrollment.status.humanize %>
                    </span>
                    <%= link_to "Continue", enrollment.training, class: "text-indigo-600 hover:text-indigo-500 font-medium text-sm" %>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        <% else %>
          <div class="bg-white rounded-2xl shadow-lg p-12 text-center">
            <div class="text-6xl mb-4">üìö</div>
            <h3 class="text-xl font-bold text-gray-900">No Active Courses</h3>
            <p class="mt-2 text-gray-500">Start learning by enrolling in a course!</p>
            <%= link_to "Browse Catalog", trainings_path, class: "mt-6 inline-flex items-center px-6 py-3 border border-transparent text-base font-medium rounded-xl text-white bg-indigo-600 hover:bg-indigo-700" %>
          </div>
        <% end %>
      </div>

      <!-- Sidebar -->
      <div class="space-y-6">
        <!-- Recommended -->
        <div class="bg-white rounded-2xl shadow-lg p-6">
          <h3 class="text-lg font-bold text-gray-900 mb-4">Recommended for You</h3>
          <div class="space-y-4">
            <% @trainings.each do |training| %>
              <%= link_to training, class: "block p-3 rounded-xl hover:bg-indigo-50 transition-colors duration-200 group" do %>
                <div class="flex items-center justify-between">
                  <div class="flex-1 min-w-0">
                    <p class="text-sm font-semibold text-gray-900 group-hover:text-indigo-600 truncate"><%= training.title %></p>
                    <p class="text-xs text-gray-500"><%= training.start_time.strftime("%b %d") %></p>
                  </div>
                  <span class="ml-3 flex-shrink-0">
                    <svg class="w-5 h-5 text-gray-400 group-hover:text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                    </svg>
                  </span>
                </div>
              <% end %>
            <% end %>
          </div>
        </div>
        
        <!-- Badges -->
        <div class="bg-gradient-to-br from-yellow-50 to-orange-50 rounded-2xl shadow-lg p-6 border border-yellow-100">
          <h3 class="text-lg font-bold text-gray-900 mb-4">üèÜ My Badges</h3>
          <% if current_user.badges.any? %>
            <div class="flex flex-wrap gap-2">
              <% current_user.badges.each do |badge| %>
                <%= link_to certificate_path(badge.id), target: "_blank", class: "inline-flex items-center px-3 py-2 rounded-full text-sm font-medium bg-yellow-100 text-yellow-800 hover:bg-yellow-200 transition-colors duration-200" do %>
                  üèÖ <%= badge.name %>
                <% end %>
              <% end %>
            </div>
          <% else %>
            <p class="text-sm text-gray-600">Complete trainings to earn badges!</p>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
