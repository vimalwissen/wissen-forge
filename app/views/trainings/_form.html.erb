<%= form_with(model: training, class: "space-y-6") do |form| %>
  <% if training.errors.any? %>
    <div id="error_explanation" class="bg-red-50 p-4 rounded text-red-700">
      <h2 class="text-lg font-medium"><%= pluralize(training.errors.count, "error") %> prohibited this training from being saved:</h2>
      <ul class="list-disc pl-5">
        <% training.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :title, class: "block text-sm font-medium text-gray-700" %>
    <%= form.text_field :title, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
  </div>

  <div>
    <%= form.label :description, class: "block text-sm font-medium text-gray-700" %>
    <%= form.text_area :description, rows: 3, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
  </div>

  <div class="grid grid-cols-6 gap-6">
    <div class="col-span-6 sm:col-span-3">
      <%= form.label :training_type, class: "block text-sm font-medium text-gray-700" %>
      <%= form.select :training_type, Training.training_types.keys.map { |k| [k.humanize, k] }, {}, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
    </div>

    <div class="col-span-6 sm:col-span-3">
      <%= form.label :mode, class: "block text-sm font-medium text-gray-700" %>
      <%= form.select :mode, Training.modes.keys.map { |k| [k.humanize, k] }, {}, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
    </div>
  </div>

  <div class="grid grid-cols-6 gap-6">
    <div class="col-span-6 sm:col-span-3">
      <%= form.label :start_time, class: "block text-sm font-medium text-gray-700" %>
      <%= form.datetime_field :start_time, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
    </div>

    <div class="col-span-6 sm:col-span-3">
      <%= form.label :end_time, class: "block text-sm font-medium text-gray-700" %>
      <%= form.datetime_field :end_time, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
    </div>
  </div>

  <div class="grid grid-cols-6 gap-6">
    <div class="col-span-6 sm:col-span-3">
      <%= form.label :capacity, class: "block text-sm font-medium text-gray-700" %>
      <%= form.number_field :capacity, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
    </div>

    <div class="col-span-6 sm:col-span-3">
      <%= form.label :instructor, class: "block text-sm font-medium text-gray-700" %>
      <%= form.text_field :instructor, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
    </div>
  </div>

  <div>
    <%= form.label :department_target, "Target Department (Optional)", class: "block text-sm font-medium text-gray-700" %>
    <%= form.text_field :department_target, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
  </div>
  
  <% if current_user.super_admin? && training.mandatory? %>
     <div>
       <%= form.label :status, "Approval Status", class: "block text-sm font-medium text-gray-700" %>
       <%= form.select :status, Training.statuses.keys.map { |k| [k.humanize, k] }, {}, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
      </div>
  <% end %>

  <div class="flex justify-end">
    <%= link_to "Cancel", trainings_path, class: "mr-4 inline-flex items-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none" %>
    <%= form.submit class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none" %>
  </div>
<% end %>
