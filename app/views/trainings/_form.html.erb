<div class="bg-white rounded-2xl shadow-lg p-8">
  <%= form_with(model: training, class: "space-y-6") do |form| %>
    <% if training.errors.any? %>
      <div class="bg-red-50 border-l-4 border-red-400 p-4 rounded-r-md">
        <div class="flex">
          <div class="flex-shrink-0">
            <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
            </svg>
          </div>
          <div class="ml-3">
            <h3 class="text-sm font-medium text-red-800"><%= pluralize(training.errors.count, "error") %> prohibited this training from being saved:</h3>
            <ul class="mt-2 text-sm text-red-700 list-disc pl-5">
              <% training.errors.each do |error| %>
                <li><%= error.full_message %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    <% end %>

    <!-- Basic Info Section -->
    <div class="border-b border-gray-200 pb-6">
      <h3 class="text-lg font-semibold text-gray-900 mb-4">Basic Information</h3>
      
      <div class="space-y-4">
        <div>
          <%= form.label :title, class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= form.text_field :title, class: "w-full px-4 py-3 border-2 border-gray-200 rounded-xl focus:outline-none focus:border-indigo-500 transition-colors duration-200", placeholder: "e.g., Introduction to Machine Learning" %>
        </div>

        <div>
          <%= form.label :description, class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= form.text_area :description, rows: 3, class: "w-full px-4 py-3 border-2 border-gray-200 rounded-xl focus:outline-none focus:border-indigo-500 transition-colors duration-200", placeholder: "Describe what participants will learn..." %>
        </div>
        
        <div>
          <%= form.label :skills, "Tech Stack & Skills (Comma separated)", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <div class="relative">
            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
              <span class="text-gray-500 text-sm">üè∑Ô∏è</span>
            </div>
            <%= form.text_field :skills, value: training.skills&.join(", "), class: "w-full pl-10 px-4 py-3 border-2 border-gray-200 rounded-xl focus:outline-none focus:border-indigo-500 transition-colors duration-200", placeholder: "e.g., React, Redux, JavaScript" %>
          </div>
          <p class="mt-1 text-xs text-gray-500">Skills acquired upon completion</p>
        </div>
      </div>
    </div>

    <!-- Training Type & Mode Section -->
    <div class="border-b border-gray-200 pb-6">
      <h3 class="text-lg font-semibold text-gray-900 mb-4">Training Type</h3>
      
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <div>
          <%= form.label :training_type, "Delivery Mode", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= form.select :training_type, Training.training_types.keys.map { |k| [k.humanize, k] }, {}, class: "w-full px-4 py-3 border-2 border-gray-200 rounded-xl focus:outline-none focus:border-indigo-500 transition-colors duration-200 bg-white" %>
        </div>

        <div>
          <%= form.label :mode, "Requirement Type", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= form.select :mode, Training.modes.keys.map { |k| [k.humanize, k] }, {}, class: "w-full px-4 py-3 border-2 border-gray-200 rounded-xl focus:outline-none focus:border-indigo-500 transition-colors duration-200 bg-white" %>
          <p class="mt-1 text-xs text-gray-500">Mandatory trainings require Super Admin approval</p>
        </div>
      </div>
    </div>

    <!-- Schedule Section -->
    <div class="border-b border-gray-200 pb-6">
      <h3 class="text-lg font-semibold text-gray-900 mb-4">Schedule</h3>
      
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <div>
          <%= form.label :start_time, class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= form.datetime_field :start_time, class: "w-full px-4 py-3 border-2 border-gray-200 rounded-xl focus:outline-none focus:border-indigo-500 transition-colors duration-200" %>
        </div>

        <div>
          <%= form.label :end_time, class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= form.datetime_field :end_time, class: "w-full px-4 py-3 border-2 border-gray-200 rounded-xl focus:outline-none focus:border-indigo-500 transition-colors duration-200" %>
        </div>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mt-4">
        <div>
          <%= form.label :capacity, "Max Participants (for classroom)", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= form.number_field :capacity, class: "w-full px-4 py-3 border-2 border-gray-200 rounded-xl focus:outline-none focus:border-indigo-500 transition-colors duration-200", min: 1 %>
        </div>

        <div>
          <%= form.label :instructor, class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= form.text_field :instructor, class: "w-full px-4 py-3 border-2 border-gray-200 rounded-xl focus:outline-none focus:border-indigo-500 transition-colors duration-200", placeholder: "Instructor name" %>
        </div>
      </div>
    </div>

    <!-- Assignment Scope Section -->
    <div class="border-b border-gray-200 pb-6">
      <h3 class="text-lg font-semibold text-gray-900 mb-4">
        <span class="flex items-center gap-2">
          <svg class="w-5 h-5 text-indigo-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
          </svg>
          Assign To
        </span>
      </h3>
      
      <div class="space-y-4">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
          <label class="relative flex cursor-pointer rounded-xl border-2 p-4 focus:outline-none <%= training.assign_all? || training.new_record? ? 'border-indigo-500 bg-indigo-50' : 'border-gray-200' %>">
            <%= form.radio_button :assignment_scope, "assign_all", class: "sr-only", checked: training.assign_all? || training.new_record? %>
            <span class="flex flex-1">
              <span class="flex flex-col">
                <span class="block text-sm font-medium text-gray-900">All Employees</span>
                <span class="mt-1 text-xs text-gray-500">Everyone can see and enroll</span>
              </span>
            </span>
            <svg class="h-5 w-5 text-indigo-600 <%= training.assign_all? || training.new_record? ? '' : 'hidden' %>" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
            </svg>
          </label>
          
          <label class="relative flex cursor-pointer rounded-xl border-2 p-4 focus:outline-none <%= training.assign_department? ? 'border-indigo-500 bg-indigo-50' : 'border-gray-200' %>">
            <%= form.radio_button :assignment_scope, "assign_department", class: "sr-only" %>
            <span class="flex flex-1">
              <span class="flex flex-col">
                <span class="block text-sm font-medium text-gray-900">Specific Departments</span>
                <span class="mt-1 text-xs text-gray-500">Only selected departments</span>
              </span>
            </span>
            <svg class="h-5 w-5 text-indigo-600 <%= training.assign_department? ? '' : 'hidden' %>" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
            </svg>
          </label>
          
          <label class="relative flex cursor-pointer rounded-xl border-2 p-4 focus:outline-none <%= training.assign_specific? ? 'border-indigo-500 bg-indigo-50' : 'border-gray-200' %>">
            <%= form.radio_button :assignment_scope, "assign_specific", class: "sr-only" %>
            <span class="flex flex-1">
              <span class="flex flex-col">
                <span class="block text-sm font-medium text-gray-900">Specific Employees</span>
                <span class="mt-1 text-xs text-gray-500">Hand-pick individuals</span>
              </span>
            </span>
            <svg class="h-5 w-5 text-indigo-600 <%= training.assign_specific? ? '' : 'hidden' %>" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
            </svg>
          </label>
        </div>
        
        <!-- Department Selection (shown when assign_department is selected) -->
        <div id="department-selection" class="<%= training.assign_department? ? '' : 'hidden' %> mt-4 p-4 bg-gray-50 rounded-xl">
          <label class="block text-sm font-medium text-gray-700 mb-2">Select Departments</label>
          <div class="grid grid-cols-2 md:grid-cols-3 gap-2">
            <% User.distinct.pluck(:department).compact.each do |dept| %>
              <label class="flex items-center p-2 bg-white rounded-lg border border-gray-200 cursor-pointer hover:bg-indigo-50">
                <%= check_box_tag "training[target_departments][]", dept, training.target_departments&.include?(dept), class: "h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-gray-300 rounded" %>
                <span class="ml-2 text-sm text-gray-700"><%= dept || "No Department" %></span>
              </label>
            <% end %>
          </div>
        </div>

        <!-- Employee Selection (shown when assign_specific is selected) -->
        <div id="employee-selection" class="<%= training.assign_specific? ? '' : 'hidden' %> mt-4 p-4 bg-gray-50 rounded-xl">
          <label class="block text-sm font-medium text-gray-700 mb-2">Select Employees</label>
          <div class="max-h-48 overflow-y-auto space-y-2">
            <% User.where(role: :employee).order(:name).each do |user| %>
              <label class="flex items-center p-2 bg-white rounded-lg border border-gray-200 cursor-pointer hover:bg-indigo-50">
                <%= check_box_tag "training[target_user_ids][]", user.id, training.target_user_ids&.include?(user.id), class: "h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-gray-300 rounded" %>
                <span class="ml-2 text-sm text-gray-700"><%= user.name %></span>
                <span class="ml-auto text-xs text-gray-500"><%= user.department %></span>
              </label>
            <% end %>
          </div>
        </div>
      </div>
    </div>
    
    <% if current_user.super_admin? && training.mandatory? %>
      <div class="border-b border-gray-200 pb-6">
        <h3 class="text-lg font-semibold text-gray-900 mb-4">Approval Status</h3>
        <div>
          <%= form.label :status, class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= form.select :status, Training.statuses.keys.map { |k| [k.humanize, k] }, {}, class: "w-full px-4 py-3 border-2 border-gray-200 rounded-xl focus:outline-none focus:border-indigo-500 transition-colors duration-200 bg-white" %>
        </div>
      </div>
    <% end %>

    <!-- Submit -->
    <div class="flex justify-end gap-4 pt-4">
      <%= link_to "Cancel", trainings_path, class: "px-6 py-3 border-2 border-gray-300 rounded-xl text-gray-700 font-medium hover:bg-gray-50 transition-colors duration-200" %>
      <%= form.submit class: "px-6 py-3 bg-gradient-to-r from-indigo-600 to-purple-600 text-white font-bold rounded-xl shadow-lg hover:shadow-xl transform hover:-translate-y-0.5 transition-all duration-200 cursor-pointer" %>
    </div>
  <% end %>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const radioButtons = document.querySelectorAll('input[name="training[assignment_scope]"]');
  const deptSection = document.getElementById('department-selection');
  const empSection = document.getElementById('employee-selection');
  const labels = document.querySelectorAll('label[class*="cursor-pointer"]');
  
  radioButtons.forEach(radio => {
    radio.addEventListener('change', function() {
      // Update label styles
      labels.forEach(label => {
        const input = label.querySelector('input[type="radio"]');
        const checkIcon = label.querySelector('svg');
        if (input && input.checked) {
          label.classList.remove('border-gray-200');
          label.classList.add('border-indigo-500', 'bg-indigo-50');
          if (checkIcon) checkIcon.classList.remove('hidden');
        } else if (input) {
          label.classList.add('border-gray-200');
          label.classList.remove('border-indigo-500', 'bg-indigo-50');
          if (checkIcon) checkIcon.classList.add('hidden');
        }
      });
      
      // Show/hide conditional sections
      if (this.value === 'assign_department') {
        deptSection.classList.remove('hidden');
        empSection.classList.add('hidden');
      } else if (this.value === 'assign_specific') {
        deptSection.classList.add('hidden');
        empSection.classList.remove('hidden');
      } else {
        deptSection.classList.add('hidden');
        empSection.classList.add('hidden');
      }
    });
  });
});
</script>
