<div class="min-h-screen bg-gradient-to-br from-gray-50 to-indigo-50">
  <!-- Header -->
  <div class="bg-gradient-to-r from-green-600 to-teal-600 pb-32">
    <div class="max-w-7xl mx-auto py-12 px-4 sm:px-6 lg:px-8">
      <nav class="flex mb-6" aria-label="Breadcrumb">
        <ol role="list" class="flex items-center space-x-4">
          <li>
            <%= link_to @training, class: "text-white/70 hover:text-white transition-colors duration-200" do %>
              ‚Üê Back to <%= @training.title %>
            <% end %>
          </li>
        </ol>
      </nav>
      
      <div class="flex items-center gap-4 mb-4">
        <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-semibold bg-white/20 backdrop-blur-sm text-white">
          <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0z"/>
          </svg>
          Assign Users
        </span>
      </div>
      
      <h1 class="text-3xl font-bold text-white">Assign Training</h1>
      <p class="mt-2 text-lg text-white/80"><%= @training.title %></p>
    </div>
  </div>

  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 -mt-24 pb-12">
    <div class="bg-white rounded-2xl shadow-lg overflow-hidden">
      <%= form_tag assign_users_training_path(@training), method: :post, class: "divide-y divide-gray-200", data: { turbo: false } do %>
        
        <!-- Assignment Type Selection -->
        <div class="p-6">
          <h2 class="text-lg font-bold text-gray-900 mb-4">How would you like to assign?</h2>
          
          <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <label class="relative flex cursor-pointer rounded-xl border-2 p-4 focus:outline-none border-indigo-500 bg-indigo-50" id="label-department">
              <%= radio_button_tag :assign_type, "department", true, class: "sr-only", id: "assign_department" %>
              <span class="flex flex-1">
                <span class="flex flex-col">
                  <span class="flex items-center gap-2">
                    <svg class="w-5 h-5 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
                    </svg>
                    <span class="block text-sm font-medium text-gray-900">By Department</span>
                  </span>
                  <span class="mt-1 text-xs text-gray-500">Enroll all users from selected departments</span>
                </span>
              </span>
              <svg class="h-5 w-5 text-indigo-600" id="check-department" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
              </svg>
            </label>
            
            <label class="relative flex cursor-pointer rounded-xl border-2 p-4 focus:outline-none border-gray-200" id="label-specific">
              <%= radio_button_tag :assign_type, "specific", false, class: "sr-only", id: "assign_specific" %>
              <span class="flex flex-1">
                <span class="flex flex-col">
                  <span class="flex items-center gap-2">
                    <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
                    </svg>
                    <span class="block text-sm font-medium text-gray-900">Specific Users</span>
                  </span>
                  <span class="mt-1 text-xs text-gray-500">Hand-pick individual employees</span>
                </span>
              </span>
              <svg class="h-5 w-5 text-indigo-600 hidden" id="check-specific" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
              </svg>
            </label>
          </div>
        </div>
        
        <!-- Department Selection -->
        <div class="p-6" id="department-section">
          <h3 class="text-md font-semibold text-gray-900 mb-4">Select Departments</h3>
          <div class="grid grid-cols-2 md:grid-cols-3 gap-3">
            <% @departments.each do |dept| %>
              <% dept_count = User.where(department: dept).count %>
              <% enrolled_in_dept = User.where(department: dept, id: @already_enrolled).count %>
              <label class="flex items-center p-3 bg-gray-50 rounded-xl border border-gray-200 cursor-pointer hover:bg-indigo-50 hover:border-indigo-300 transition-colors duration-200">
                <%= check_box_tag "departments[]", dept, false, class: "h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-gray-300 rounded" %>
                <div class="ml-3">
                  <span class="text-sm font-medium text-gray-900"><%= dept %></span>
                  <span class="block text-xs text-gray-500">
                    <%= dept_count %> users
                    <% if enrolled_in_dept > 0 %>
                      (<%= enrolled_in_dept %> enrolled)
                    <% end %>
                  </span>
                </div>
              </label>
            <% end %>
          </div>
        </div>

        <!-- Specific Users Selection -->
        <div class="p-6 hidden" id="specific-section">
          <h3 class="text-md font-semibold text-gray-900 mb-4">Select Employees</h3>
          <div class="max-h-80 overflow-y-auto space-y-2 border border-gray-200 rounded-xl p-4">
            <% @employees.group_by(&:department).each do |dept, users| %>
              <div class="mb-4">
                <h4 class="text-xs font-semibold text-gray-500 uppercase tracking-wider mb-2"><%= dept || "No Department" %></h4>
                <div class="space-y-2">
                  <% users.each do |user| %>
                    <% is_enrolled = @already_enrolled.include?(user.id) %>
                    <label class="flex items-center p-3 rounded-lg border <%= is_enrolled ? 'border-green-200 bg-green-50' : 'border-gray-200 bg-white hover:bg-indigo-50 hover:border-indigo-300' %> cursor-pointer transition-colors duration-200">
                      <% if is_enrolled %>
                        <span class="h-4 w-4 text-green-600 flex items-center justify-center">
                          <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                          </svg>
                        </span>
                      <% else %>
                        <%= check_box_tag "user_ids[]", user.id, false, class: "h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-gray-300 rounded" %>
                      <% end %>
                      <div class="ml-3 flex-1">
                        <span class="text-sm font-medium <%= is_enrolled ? 'text-green-800' : 'text-gray-900' %>"><%= user.name %></span>
                        <span class="block text-xs <%= is_enrolled ? 'text-green-600' : 'text-gray-500' %>"><%= user.designation %></span>
                      </div>
                      <% if is_enrolled %>
                        <span class="text-xs text-green-600 font-medium">Already Enrolled</span>
                      <% end %>
                    </label>
                  <% end %>
                </div>
              </div>
            <% end %>
          </div>
        </div>
        
        <!-- Currently Enrolled Summary -->
        <div class="p-6 bg-gray-50">
          <div class="flex items-center justify-between mb-4">
            <div>
              <h3 class="text-md font-semibold text-gray-900">Currently Enrolled</h3>
              <p class="text-sm text-gray-500"><%= @training.enrollments.count %> user(s) already enrolled in this training</p>
            </div>
          </div>
        </div>

        <!-- Submit -->
        <div class="p-6 bg-white flex justify-end gap-4">
          <%= link_to "Cancel", @training, class: "px-6 py-3 border-2 border-gray-300 rounded-xl text-gray-700 font-medium hover:bg-gray-50 transition-colors duration-200" %>
          <%= submit_tag "Assign Users", class: "px-6 py-3 bg-gradient-to-r from-green-600 to-teal-600 text-white font-bold rounded-xl shadow-lg hover:shadow-xl transform hover:-translate-y-0.5 transition-all duration-200 cursor-pointer" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const deptRadio = document.getElementById('assign_department');
  const specificRadio = document.getElementById('assign_specific');
  const deptSection = document.getElementById('department-section');
  const specificSection = document.getElementById('specific-section');
  const labelDept = document.getElementById('label-department');
  const labelSpecific = document.getElementById('label-specific');
  const checkDept = document.getElementById('check-department');
  const checkSpecific = document.getElementById('check-specific');

  function updateUI() {
    if (deptRadio.checked) {
      deptSection.classList.remove('hidden');
      specificSection.classList.add('hidden');
      labelDept.classList.add('border-indigo-500', 'bg-indigo-50');
      labelDept.classList.remove('border-gray-200');
      labelSpecific.classList.remove('border-indigo-500', 'bg-indigo-50');
      labelSpecific.classList.add('border-gray-200');
      checkDept.classList.remove('hidden');
      checkSpecific.classList.add('hidden');
    } else {
      deptSection.classList.add('hidden');
      specificSection.classList.remove('hidden');
      labelSpecific.classList.add('border-indigo-500', 'bg-indigo-50');
      labelSpecific.classList.remove('border-gray-200');
      labelDept.classList.remove('border-indigo-500', 'bg-indigo-50');
      labelDept.classList.add('border-gray-200');
      checkSpecific.classList.remove('hidden');
      checkDept.classList.add('hidden');
    }
  }

  deptRadio.addEventListener('change', updateUI);
  specificRadio.addEventListener('change', updateUI);
  
  // Initialize
  updateUI();
});
</script>
