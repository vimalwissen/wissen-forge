<div class="bg-white shadow overflow-hidden sm:rounded-lg">
  <div class="px-4 py-5 sm:px-6 flex justify-between items-center">
    <h3 class="text-lg leading-6 font-medium text-gray-900">Training Catalog</h3>
    <% if policy(Training).create? %>
      <%= link_to "New Training", new_training_path, class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700" %>
    <% end %>
  </div>
  <ul role="list" class="divide-y divide-gray-200">
    <% @trainings.each do |training| %>
      <li class="px-4 py-4 sm:px-6">
        <div class="flex items-center justify-between">
          <div class="text-sm font-medium text-indigo-600 truncate">
            <%= link_to training.title, training %>
          </div>
          <div class="ml-2 flex-shrink-0 flex">
            <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full <%= training.mandatory? ? 'bg-red-100 text-red-800' : 'bg-green-100 text-green-800' %>">
              <%= training.mode.humanize %>
            </span>
          </div>
        </div>
        <div class="mt-2 sm:flex sm:justify-between">
          <div class="sm:flex">
            <p class="flex items-center text-sm text-gray-500">
              <%= training.description.truncate(100) %>
            </p>
          </div>
          <div class="mt-2 flex items-center text-sm text-gray-500 sm:mt-0">
            <p>
              <%= training.start_time.to_date.to_fs(:long) %>
            </p>
          </div>
        </div>
      </li>
    <% end %>
  </ul>
</div>
