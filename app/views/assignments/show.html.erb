<div class="min-h-screen bg-gradient-to-br from-gray-50 to-indigo-50">
  <!-- Header -->
  <div class="bg-gradient-to-r from-orange-500 to-pink-500 pb-32">
    <div class="max-w-7xl mx-auto py-12 px-4 sm:px-6 lg:px-8">
      <nav class="flex mb-6" aria-label="Breadcrumb">
        <ol role="list" class="flex items-center space-x-4">
          <li>
            <%= link_to @training, class: "text-white/70 hover:text-white transition-colors duration-200" do %>
              â† Back to <%= @training.title %>
            <% end %>
          </li>
        </ol>
      </nav>
      
      <div class="flex items-center gap-4 mb-4">
        <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-semibold bg-white/20 backdrop-blur-sm text-white">
          Assignment
        </span>
        <% if @assignment.due_date < Time.current %>
          <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-semibold bg-red-100 text-red-800">
            Past Due
          </span>
        <% else %>
          <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-semibold bg-green-100 text-green-800">
            Open
          </span>
        <% end %>
      </div>
      
      <h1 class="text-4xl font-bold text-white"><%= @assignment.title %></h1>
      <p class="mt-4 text-xl text-white/80">For: <%= @training.title %></p>
    </div>
  </div>

  <!-- Content -->
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 -mt-24 pb-12">
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
      
      <!-- Main Content -->
      <div class="lg:col-span-2 space-y-6">
        <!-- Assignment Description -->
        <div class="bg-white rounded-2xl shadow-lg p-8">
          <h2 class="text-xl font-bold text-gray-900 mb-4">Assignment Details</h2>
          <div class="prose prose-indigo max-w-none">
            <%= simple_format(@assignment.description || "No description provided for this assignment.") %>
          </div>
          
          <div class="mt-6 pt-6 border-t border-gray-200">
            <dl class="grid grid-cols-2 gap-4">
              <div>
                <dt class="text-sm font-medium text-gray-500">Due Date</dt>
                <dd class="mt-1 text-lg font-semibold text-gray-900">
                  <%= @assignment.due_date.strftime("%B %d, %Y at %I:%M %p") %>
                </dd>
              </div>
              <div>
                <dt class="text-sm font-medium text-gray-500">Time Remaining</dt>
                <dd class="mt-1 text-lg font-semibold <%= @assignment.due_date > Time.current ? 'text-green-600' : 'text-red-600' %>">
                  <% if @assignment.due_date > Time.current %>
                    <%= distance_of_time_in_words(Time.current, @assignment.due_date) %> left
                  <% else %>
                    Overdue by <%= distance_of_time_in_words(@assignment.due_date, Time.current) %>
                  <% end %>
                </dd>
              </div>
            </dl>
          </div>
        </div>
        
        <!-- Previous Submissions -->
        <% if @my_submission %>
          <div class="bg-green-50 rounded-2xl shadow-lg p-8 border-2 border-green-200">
            <div class="flex items-center gap-3 mb-4">
              <svg class="h-8 w-8 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
              <h2 class="text-xl font-bold text-green-800">You've Submitted!</h2>
            </div>
            <p class="text-green-700">Your submission was received on <%= @my_submission.created_at.strftime("%B %d, %Y at %I:%M %p") %>.</p>
            <% if @my_submission.grade %>
              <div class="mt-4 p-4 bg-white rounded-xl">
                <p class="text-sm text-gray-500">Your Grade</p>
                <p class="text-3xl font-bold text-indigo-600"><%= @my_submission.grade %>%</p>
              </div>
            <% else %>
              <p class="mt-4 text-sm text-green-600">Your assignment is being graded. Check back later!</p>
            <% end %>
          </div>
        <% end %>
      </div>
      
      <!-- Sidebar: Submit -->
      <div class="lg:col-span-1">
        <div class="bg-white rounded-2xl shadow-lg p-6 sticky top-24">
          <h3 class="text-lg font-bold text-gray-900 mb-4">Submit Your Work</h3>
          
          <% if @my_submission %>
            <div class="bg-gray-50 rounded-xl p-4 text-center">
              <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
              <p class="mt-2 text-gray-600">Already submitted</p>
            </div>
          <% else %>
            <%= form_with model: [@training, @assignment, Submission.new], class: "space-y-4" do |f| %>
              <div>
                <%= f.label :file_url, "File URL / Google Drive Link", class: "block text-sm font-medium text-gray-700 mb-2" %>
                <%= f.text_field :file_url, placeholder: "https://drive.google.com/...", class: "w-full px-4 py-3 border-2 border-gray-200 rounded-xl focus:outline-none focus:border-indigo-500 transition-colors duration-200" %>
                <p class="mt-1 text-xs text-gray-500">Paste a link to your document or file.</p>
              </div>
              
              <%= f.submit "Submit Assignment", class: "w-full py-3 px-4 border border-transparent rounded-xl text-base font-bold text-white bg-gradient-to-r from-orange-500 to-pink-500 hover:from-orange-600 hover:to-pink-600 focus:outline-none shadow-lg hover:shadow-xl transform hover:-translate-y-0.5 transition-all duration-200 cursor-pointer" %>
            <% end %>
          <% end %>
          
          <div class="mt-6 pt-6 border-t border-gray-200">
            <h4 class="text-sm font-semibold text-gray-500 mb-3">Guidelines</h4>
            <ul class="space-y-2 text-sm text-gray-600">
              <li class="flex items-start gap-2">
                <svg class="h-5 w-5 text-green-500 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                </svg>
                Submit before the deadline
              </li>
              <li class="flex items-start gap-2">
                <svg class="h-5 w-5 text-green-500 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                </svg>
                Use a shareable link
              </li>
              <li class="flex items-start gap-2">
                <svg class="h-5 w-5 text-green-500 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                </svg>
                Ensure access is granted
              </li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
